# Production Environment Configuration
NODE_ENV=production

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/midkey_production
REDIS_URL=redis://localhost:6379

# Midnight Network Configuration
MIDNIGHT_NETWORK_URL=https://api.midnight.network
CONTRACT_ADDRESS=0x0000000000000000000000000000000000000000
SECRET_KEY=your-production-secret-key

# Lace Wallet Configuration
LACE_WALLET_ADDRESS=your-production-wallet-address
LACE_WALLET_PRIVATE_KEY=your-production-private-key

# Keycloak Configuration
KEYCLOAK_URL=https://auth.midkey.io
KEYCLOAK_REALM=midkey
KEYCLOAK_CLIENT_ID=midkey-frontend
KEYCLOAK_CLIENT_SECRET=your-keycloak-client-secret

# Security Configuration
JWT_SECRET=your-super-secure-jwt-secret-key
ENCRYPTION_KEY=your-encryption-key
SESSION_SECRET=your-session-secret

# API Configuration
API_BASE_URL=https://api.midkey.io
FRONTEND_URL=https://midkey.io
CORS_ORIGIN=https://midkey.io

# Monitoring and Logging
LOG_LEVEL=info
SENTRY_DSN=your-sentry-dsn
DATADOG_API_KEY=your-datadog-api-key

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Email Configuration
SMTP_HOST=smtp.midkey.io
SMTP_PORT=587
SMTP_USER=noreply@midkey.io
SMTP_PASS=your-smtp-password

# File Storage
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_S3_BUCKET=midkey-production
AWS_REGION=us-east-1
